<h1><%= @product.name %></h1>

<div class="center"><img src="<%= @images.first.image_url %>"></div>
<br>
<h4>Supplier: <%= @product.supplier.name %></h4>
<h4>Price: <%= number_to_currency(@product.price) %> (<%= @product.sale_message %>)</h4>
<h4>Tax: <%= number_to_currency(@product.tax) %></h4>
<h4>Total Price: <%= number_to_currency(@product.total) %></h4>
<h4><%= @product.stock %></h4>
<h5>Description:</h5>
<p><%= @product.description %></p>

<p>
<% @images.each do |image| %>
  <img src="<%= image.image_url %>">
<% end %>
</p>



Buy Now:
<div>
<%= form_tag "/orders", method: :post do %>

<%= label_tag "Quantity" %>
<%= text_field_tag :quantity %>
<%= hidden_field_tag :productid, @product.id %>
</div>
<%= submit_tag "Buy Now" %>
<% end %>




<p>Last updated: <%= @product.friendly_updated_at %></p>
<p>Updated by: <%= @product.user.email %></p>
<%= link_to "Edit", edit_path %><br>

<%= link_to "Delete", "/index/#{@product.id}", method: :delete %><br>
<%= link_to "Go back", "/index" %><br>



